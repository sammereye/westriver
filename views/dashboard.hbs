<html>
<head>
    <link rel="stylesheet" href="../css/mainStyles.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,regular,italic,500,500italic,700,700italic,900,900italic"
        rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Mukta+Malar:200,300,regular,500,600,700,800" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic"
        rel="stylesheet" />
</head>

<body>
    <div class="sidebar">
        <div class="title">
            <h1>WESTRIVER</h1>
        </div>
        <div class="infoLine user">
            {{#if morning}}
                <p>Good Morning,</p>
            {{else}}
                <p>Good Afternoon,</p>
            {{/if}}
            <p>{{firstName}} {{lastName}}</p>
        </div>
        <div class="infoLine active">
            <img src="../img/home.svg" />
            <p>Home</p>
        </div>
        <div class="infoLine classButton">
            <img src="../img/class.svg" />
            <p>Courses</p>
            <img class="arrow" src="../img/arrow_down.svg" />
        </div>
        <div class="classSidebar">
            {{#each courses}}
            <div class="infoLine class" style="background-color: {{this.color}}">
                <p>{{this.courseName}}</p>
            </div>
            {{/each}}
        </div>


        <div class="infoLine">
            <img src="../img/account.svg" />
            <p>Account</p>
        </div>
    </div>
    <main class="classList">
        <h1 class="mainHeader">Classes</h1>
        <div class="classes">


            {{#each courses}}
            <div class="classCard">
                <div class="className" style="background-color: {{this.color}}">
                    <h3>{{this.courseName}}</h3>
                </div>
                <div class="classContent">
                    <div class="leftInfo">
                        <p>Section</p>
                        <p>Time</p>
                        <p>Teacher</p>
                    </div>
                    <div class="rightDetails">
                        <p>{{this.departmentCode}} {{this.courseID}}</p>
                        <p>{{this.startTime}} - {{this.endTime}}</p>
                        <p>{{this.teacher}}</p>
                    </div>
                </div>
            </div>
            {{/each}}


        </div>
    </main>
    <footer>

    </footer>


    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="../js/jQueryRotate.js"></script>
    <script src="../js/scripts.js"></script>
    
</body>

</html>